<%- include ('header') -%>
<%- include ('navbar') -%>


    <div class="container">
        <div class="row">

            <div class="col-0 col-sm-0 col-md-3">
            </div>

            <div class="col-sm-12 col-md-6">
                <br />
                <h2>
                    <% if (typeof post === 'undefined') { %>
                        Új poszt
                    <% }else{ %>
                        Poszt szerkesztése
                    <% } %>
                </h2>
                <form method="POST">
                    <div class="form-group">
                        <label for="list">Bevásárló lista</label>
                        <input type="text" class="form-control" id="list" name="list"
                           value="<%= (typeof post === 'undefined') ? '' : post.list %>">
                    </div>

                    <div class="form-group">
                        <label for="ps">Utóirat</label>
                        <input type="text" class="form-control" id="ps" name="ps"
                           value="<%= (typeof post === 'undefined') ? '' : post.ps %>">
                    </div>
                    <br />

                    <input type="submit" class="btn btn-primary" value="Mentés"/>
                    <a class="btn btn-link" href="/profile/<%= user._id%>">Mégse</a>

                </form>
                <br />
            </div>
        </div>
    </div>

<%- include ('footer') -%>